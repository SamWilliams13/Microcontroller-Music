<Window x:Class="Microcontroller_Music.AddRepeat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microcontroller_Music"
        mc:Ignorable="d"
        Title="AddRepeat" Height="136.874" Width="407.186">
    <Grid Margin="10,10,17,9">
        <!--tells user to enter number in text box-->
        <Label Content="Number of times repeated: " Margin="7,2,128,51"/>
        <!--text box where user must enter the number of times it repeats-->
        <TextBox x:Name="RepeatCount" Text="1" Margin="182,2,47,51">
        </TextBox>
        <!--button to allow program to continue-->
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Margin="182,49,47,10"/>
    </Grid>
</Window>
